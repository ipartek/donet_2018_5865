<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Email</th>
            <th>Fecha de Nacimiento</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Imparticion imparticion in Model.Imparticiones)
        {
            <tr>
                <td>@imparticion.Alumno.Nombre</td>
                <td>@imparticion.Alumno.Apellidos</td>
                <td>@imparticion.Alumno.Email</td>
                <td>@imparticion.Alumno.FechaNacimiento.Value.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>