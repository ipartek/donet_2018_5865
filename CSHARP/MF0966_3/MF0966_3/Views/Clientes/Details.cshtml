            <th>Fecha de finalización</th>
            <th>Número de horas</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Curso curso in Model.Cursos)
        {
            <tr>
                <td>@curso.Nombre</td>
                <td>@curso.Identificador</td>
