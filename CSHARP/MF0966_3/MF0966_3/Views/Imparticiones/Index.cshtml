@model IEnumerable<MF0966_3.Models.Imparticion>

@{
    ViewBag.Title = "Imparticiones";
}

<h2>Imparticiones</h2>

<p>
    @Html.ActionLink("Crear nueva impartición", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FechaMatriculacion)
        </th>
        <th>
            Alumno
        </th>
        <th>
            Curso
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.FechaMatriculacion.ToShortDateString()
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Alumno.Nombre) @Html.DisplayFor(modelItem => item.Alumno.Apellidos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Curso.Nombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
            @Html.ActionLink("Borrar", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
